<div class="banner">
  <div class="container row ml-4">
    <div class="col-8">
      <h1>Finally, an <span style="color:#33D9B2;">easy</span> way to know who trust with my data</h1>
      <div class="mt-4">
        <p class="green-line pl-4">Panther is an easy-to-use privacy platform that shows you how trustworthy an online service is when handling your data. With the powerful Pantherscore, we help you make the right choice before signing up to a service.</p>
      </div>
    </div>
    <div class="col-3 gif-image">
<!--       <%= image_tag("tenor.gif") %>
 -->    </div>
  </div>
</div>

<div class="container-fluid mb-4">
  <h2 class="ml-4">Most Viewed</h2>
  <div class="row mt-4 pt-2 ml-4">
    <% @most_viewed.each do |service| %>
      <div class="col-4">
        <div class="row mb-4">
          <div class="col-2">
            <svg width="50" height="50" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M61.0651 65.3803C40.3322 76.0751 13.5042 66.3695 3.30462 44.6461C-3.43328 30.3288 0.510549 12.7226 11.6992 6.6396C17.7818 3.35081 30.9486 5.15593 43.1263 10.7444C75.0478 25.7294 84.2584 53.6965 61.0651 65.3803Z" fill="#FFC048"/>
            </svg>
<!--             <p class="icon  icon-green-mid"><%= service.pantherscore %></p>
 -->          </div>
          <div class="col-2">
            <p>Icon</p>
          </div>
          <div class="col-8 ">
            <div class="cards-text">
              <%= link_to service_path(service) do %>
                <h3><%= service.name %></h3>
              <% end %>
              <p class="grey-line" style="display: inline;"><%= service.categories.first.name %></p>
              <p class="grey-line" style="display: inline;"><%= service.reviews.count %> Reviews</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="banner-large mt-4">
  <div class="container-fluid row">
    <div class="col-4">
      <div class="container row">
        <div class="col-12">
          <h1 class="mb-4">Hall of Fame</h1>
          <% counter = 1 %>
          <% @top_five_services.each do |service| %>
            <div class="row">
              <div class="col-1">
                <p><%= counter %></p>
              </div>
              <div class="col-1">
                <p class="green-circle-small"><%= service.pantherscore %></p>
              </div>
              <div class="col-2 ml-4">
                <p>Icon</p>
              </div>
              <div class="col">
                <%= link_to service_path(service) do %>
                  <p><%= service.name %></p>
                <% end %>
              </div>
            </div>
            <% counter += 1 %>
          <% end %>
          <div class="row">
            <div class="col-10 text-right">
              <p>> View All</p>
            </div>
          </div>
        </div>
      </div>
      <div class="container row">
        <div class="col-12">
          <h1 class="mb-4">Hall of Shame</h1>
          <% counter = 1 %>
          <% @last_five_services.each do |service| %>
            <div class="row">
              <div class="col-1">
                <p><%= counter %></p>
              </div>
              <div class="col-1">
                <p class="red-circle-small"><%= service.pantherscore %></p>
              </div>
              <div class="col-2 ml-4">
                <p>Icon</p>
              </div>
              <div class="col">
                <%= link_to service_path(service) do %>
                  <p><%= service.name %></p>
                <% end %>
              </div>
            </div>
              <% counter += 1 %>
          <% end %>
          <div class="row">
            <div class="col-10 text-right">
              <p>> View All</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <h1 class="mb-4">Top advocates</h1>
      <% @top_reviewed_users.each do |user| %>
      <div class="row">
        <div class="col-12 advocates-text">
          <h4 class="mb-0"><%= user.username %></h4>
          <p><%= user.reviews.count %> Reviews</p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-4">
      <h1 class="mb-4">Recent reviews</h1>
      <% @recent_reviews.each do |review| %>
      <div class="row reviews-text">
        <div class="col-12">
          <h6><%= review.content %></h6>
          <p>reviewer on <%= review.service.name %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid mb-4">
  <div class="row ml-4">
    <div class="col-6">
      <h1>Crew Picks</h1>
      <% @crew_picks.each do |service| %>
      <div class="col-4">
        <div class="row mb-4">
          <div class="col-2">
            <p class="green-circle"><%= service.pantherscore %></p>
          </div>
          <div class="col-2">
            <p>Icon</p>
          </div>
          <div class="col-8 ">
            <div class="cards-text">
              <%= link_to service_path(service) do %>
                <h2><%= service.name %></h2>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-12">
          <h1>Categories</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h1>Recently Added</h1>
        </div>
      </div>
    </div>
  </div>
</div>
