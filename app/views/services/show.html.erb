<div class="banner">
  <div class="row">

    <div class="col-6">
      <h1><%= image_tag @service.icon, class: 'icon-large' %> <%= @service.name %></h1>
      <br>
      <p><%= simple_format @service.description %></p>
      <%= link_to "Official Website", @service.url%>
      <br>
      <br>
      <h3>Categories</h3>
      <ul>
      <% @service.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
      </ul>
      <h2>Pantherscore: <%= @service.pantherscore %></h2>
    </div>

    <div class="col-3"></div>
      <h3>Alternatives</h3>
      <ul>
        <% @service.alternatives.each do |alternative| %>
          <li><%= alternative.name %></li>
        <% end %>
      </ul>
    </div>

  </div>
</div>


<div class="container-fluid">
<h1>Write your review</h1>
<p> Your score</p>
<%= render 'reviews/form', service: @service, review: @review if user_signed_in? %>
<% @service.reviews.reverse.each do |review| %>
  <div class="review-container">
    <div class="name-date-inline">
      <p class="username"><%= review.user.username %></p>
      <i class="date"><%= review.created_at %></i>
    </div>
    <div class="rating-container">
    <p class="rating"><%= review.rating %></p>
    </div>
     <p><%= review.content %></p>
    <br>
    
  <% end %>
  </div>
 
</div>


